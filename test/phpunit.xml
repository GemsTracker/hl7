<?xml version="1.0"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="false"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         verbose="true"
         strict="true">
    <testsuite>
        <directory>src/HL7</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">../src/HL7</directory>
        </whitelist>
    </filter>
</phpunit>